@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Zapomněl jsi své heslo?";
}

<h1>@ViewData["Title"]</h1>
<h2>Zadej svůj email.</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <label asp-for="Input.Email" class="form-label"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <button type="submit" class="w-100 btn btn-lg btn-outline-dark" style=" margin-bottom: 10px;">Změnit heslo</button>

            <div>
                <p>
                    <a asp-page="./Login">Přihlásit se</a>
                </p>
                <p>
                    <a asp-page="./Register">Zaregistrovat se jako nový uživatel</a>
                </p>
                <p>
                    <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Znovu poslat potvrzení účtu</a>
                </p>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
