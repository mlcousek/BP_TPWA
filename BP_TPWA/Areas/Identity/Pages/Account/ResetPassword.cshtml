@page
@model ResetPasswordModel
@{
    ViewData["Title"] = "Resetovat heslo";
}

<h1>@ViewData["Title"]</h1>
<h2>Resetuj si své heslo.</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <input asp-for="Input.Code" type="hidden" />
            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="jmeno@priklad.cz" />
                <label asp-for="Input.Email" class="form-label"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Prosím zadej své heslo." />
                <label asp-for="Input.Password" class="form-label">Heslo</label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Prosím potvrď své heslo." />
                <label asp-for="Input.ConfirmPassword" class="form-label"></label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="w-100 btn btn-lg btn-outline-dark">Resetovat heslo</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        var errorElement = document.querySelector('.validation-summary-errors');
        if (errorElement) {
            var liElements = errorElement.querySelectorAll('li');

            liElements.forEach(function (li) {
                if (li.textContent.trim() === "Passwords must have at least one digit ('0'-'9').") {
                    li.textContent = "Heslo musí obsahovat alespoň jednu číslici.";
                }
                if (li.textContent.trim() === "Passwords must have at least one lowercase ('a'-'z').") {
                    li.textContent = "Heslo musí obsahovat alespoň jedno malé písmeno.";
                }
            });
        }
    </script>
}
