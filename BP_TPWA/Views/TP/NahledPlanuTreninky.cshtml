@model NahledPlanuModel

@{
    var typyTreninku = Model.Cviky.SelectMany(c => c.TypyTreninku).Distinct().ToList();
}

<head>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
</head>

<style>
    /* Vlastní CSS styly pro vylepšení vzhledu */

    /* Import Roboto písma z Google Fonts */

    /* Základní styly pro tabulku */
    table {
        width: 100%;
        border-collapse: collapse;
        border: 1px solid #ddd;
        margin: auto; /* Centrování horizontálně */
        font-family: 'Roboto', sans-serif; /* Použití písma Roboto */
    }

    th, td {
        padding: 8px;
        border: 1px solid #ddd;
        text-align: center; /* Centrování obsahu v buňkách */
    }

    th {
        background-color: #f2f2f2;
    }

    /* Styly pro zvýraznění hlavičky tabulky */
    h2 {
        font-size: 24px;
        margin-top: 20px;
        margin-bottom: 16px;
        text-align: center; /* Centrování nadpisu */
        font-family: 'Roboto', sans-serif; /* Použití písma Roboto */
    }

    h3 {
        font-size: 18px;
        margin-top: 20px;
        margin-bottom: 12px;
        text-align: center; /* Centrování nadpisu */
        font-family: 'Roboto', sans-serif; /* Použití písma Roboto */
    }

    /* Centrování tabulky vertikálně */
    .table-container {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh; /* Výška obrazovky */
    }
</style>

<h2>Tréninkový plán</h2>

<p>Tento tréninkový plán byl vytvořen pomocí Aplikace pro vytváření tréninkových plánů</p>

